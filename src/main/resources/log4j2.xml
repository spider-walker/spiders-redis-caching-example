<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
       <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n"/>
        </Console>
         <RollingFile name="RollingFileAppender" 
                      fileName="logs/emrys.log"
                      filePattern="logs/$${date:yyyyMM}/emrys_%d{yyyyMMdd}-%i.log.gz"
                      immediateFlush="true">
            <PatternLayout>
                <Pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <OnStartupTriggeringPolicy />
                <TimeBasedTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="100MB" />
            </Policies>
            <DefaultRolloverStrategy max="200" />
        </RollingFile>
    </Appenders>
    <Loggers>
        <Root level="INFO">
           <AppenderRef ref="Console"/>
            <AppenderRef ref="RollingFileAppender" />
        </Root>
        <Logger name="RollingFileLogger">
            <AppenderRef ref="RollingFileAppender" />
        </Logger>
        <Logger name="org.springframework.cache" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="logging.level.org.springframework.web" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name="logging.level.org.apache" level="trace">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
